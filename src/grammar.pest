WHITESPACE = _{ " " | "\t" | "\r" | "\n" }
COMMENT = _{
  "/*" ~ (!"*/" ~ ANY)* ~ "*/"
  | "//" ~ ANY+ ~ "\n"
}

LAMBDA = _{ "Î»" | "\\" }
DOT = _{ "." }
OPEN_PAREN = _{ "(" }
CLOSE_PAREN = _{ ")" }
VARIABLE_CHAR = _{ LETTER | "'" }

main = { SOI ~ term ~ EOI }

variable = @{ VARIABLE_CHAR+ }
abstraction = { LAMBDA ~ variable ~ DOT ~ term }
application = {
  variable ~ term
  | OPEN_PAREN ~ term ~ CLOSE_PAREN ~ term
}

term = {
  application
  | abstraction
  | variable
  | OPEN_PAREN ~ term ~ CLOSE_PAREN
}
